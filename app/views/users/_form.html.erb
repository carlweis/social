<%= form_for(@user) do |f| %>

  <%= render 'errors' %>

  <% # sign up form  %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email address' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Create a password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Account', class: 'btn btn-primary btn-block' %>
  </div>

<% end %>