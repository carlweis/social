<div class="pull-left">
  <%= link_to 'Home', root_path %>
</div>
<div class="pull-right">
  <% if current_user %>
      <strong><%= link_to current_user.name, user_path(current_user) %></strong>&nbsp;|&nbsp;
      <%= link_to 'Log Out', logout_path %>
  <% else %>
      <%= link_to 'Log In', login_path %> or
      <%= link_to 'Sign Up', signup_path %>
  <% end %>
</div>