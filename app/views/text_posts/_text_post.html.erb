<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to text_post.title, post_path(text_post) %>
      <span class="pull-right"><%= time_ago_in_words(text_post.created_at) %></span>
    </h3>
  </div>
  <div class="panel-body">
    <p><em>By <%= link_to text_post.user.name, user_path(text_post.user) %></em></p>
    <%= text_post.body %>
  </div>
</div>